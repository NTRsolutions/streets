<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:tx="http://www.springframework.org/schema/tx"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
        http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
        http://www.springframework.org/schema/tx
        http://www.springframework.org/schema/tx/spring-tx-3.2.xsd">

    <import resource="classpath*:common-context.xml" />

    <bean class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
        <property name="location" value="classpath:properties/database.properties"/>
    </bean>

    <bean id="streetsDataSource" class="org.springframework.jdbc.datasource.DriverManagerDataSource">
        <property name="driverClassName" value="${hibernate.connection.driver_class}" />
        <property name="url" value="${hibernate.connection.url}" />
        <property name="username" value="${hibernate.connection.username}" />
        <property name="password" value="${hibernate.connection.password}" />
    </bean>

    <bean id="streetsSessionFactory" class="org.springframework.orm.hibernate4.LocalSessionFactoryBean">
        <property name="annotatedClasses">
            <list>
                <value>net.blaklizt.streets.persistence.UserGroup</value>
                <value>net.blaklizt.streets.persistence.Role</value>
                <value>net.blaklizt.streets.persistence.UserGroupRole</value>
                <value>net.blaklizt.streets.persistence.UserGroupRolePK</value>
                <value>net.blaklizt.streets.persistence.User</value>
                <value>net.blaklizt.streets.persistence.Gang</value>
                <value>net.blaklizt.streets.persistence.UserAttribute</value>
                <value>net.blaklizt.streets.persistence.UserItem</value>
                <value>net.blaklizt.streets.persistence.Business</value>
                <value>net.blaklizt.streets.persistence.BusinessProblem</value>
                <value>net.blaklizt.streets.persistence.Item</value>
                <value>net.blaklizt.streets.persistence.Location</value>
                <value>net.blaklizt.streets.persistence.Store</value>
                <value>net.blaklizt.streets.persistence.StoreItem</value>
                <value>net.blaklizt.streets.persistence.StoreItemPK</value>
                <value>net.blaklizt.streets.persistence.dao.AbstractDao</value>
                <value>net.blaklizt.streets.persistence.dao.BusinessProblemDao</value>
                <value>net.blaklizt.streets.persistence.dao.LocationDao</value>
                <value>net.blaklizt.streets.persistence.dao.StoreDao</value>
                <value>net.blaklizt.streets.persistence.dao.StoreItemDao</value>
                <value>net.blaklizt.streets.persistence.dao.UserDao</value>
                <value>net.blaklizt.streets.persistence.dao.UserItemDao</value>
                <value>net.blaklizt.streets.persistence.dao.UserGroupRoleDao</value>
            </list>
        </property>

        <property name="dataSource" ref="streetsDataSource"/>

        <property name="hibernateProperties">
            <props>
                <prop key="hibernate.dialect">${hibernate.dialect}</prop>
                <prop key="hibernate.show_sql">${hibernate.show_sql}</prop>
                <prop key="hibernate.connection.url">jdbc:mysql://localhost:3306/streets</prop>
                <prop key="hibernate.connection.driver_class">com.mysql.jdbc.Driver</prop>
                <prop key="hibernate.connection.username">streets</prop>
                <prop key="hibernate.connection.password">imthestreets</prop>
            </props>
        </property>

        <property name="mappingResources">
            <list>
                <value>net/blaklizt/streets/persistence/Business.hbm.xml</value>
                <value>net/blaklizt/streets/persistence/BusinessProblem.hbm.xml</value>
                <value>net/blaklizt/streets/persistence/Gang.hbm.xml</value>
                <value>net/blaklizt/streets/persistence/Item.hbm.xml</value>
                <value>net/blaklizt/streets/persistence/Location.hbm.xml</value>
                <value>net/blaklizt/streets/persistence/Role.hbm.xml</value>
                <value>net/blaklizt/streets/persistence/Store.hbm.xml</value>
                <value>net/blaklizt/streets/persistence/StoreItem.hbm.xml</value>
                <value>net/blaklizt/streets/persistence/User.hbm.xml</value>
                <value>net/blaklizt/streets/persistence/UserAttribute.hbm.xml</value>
                <value>net/blaklizt/streets/persistence/UserGroup.hbm.xml</value>
                <value>net/blaklizt/streets/persistence/UserGroupRole.hbm.xml</value>
                <value>net/blaklizt/streets/persistence/UserItem.hbm.xml</value>
            </list>
        </property>
    </bean>

    <tx:annotation-driven transaction-manager="transactionManager"/>

    <bean id="transactionManager" class="org.springframework.orm.hibernate4.HibernateTransactionManager">
        <property name="sessionFactory" ref="streetsSessionFactory"/>
    </bean>

</beans>