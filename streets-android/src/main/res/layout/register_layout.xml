<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/id_map_layout"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#000000">

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="80dp"
        android:layout_marginTop="20dip"
        android:padding="5dp"
        android:gravity="center_horizontal"
        android:background="@drawable/blaklizt_logo"
        android:contentDescription="@string/blaklizt_logo"/>

    <TextView
        android:id="@+id/labelRegisterHeader"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        android:text="@string/register_header_text"
        android:textSize="25sp"
        android:textStyle="bold"
        android:gravity="center" />
    <TextView
        android:id="@+id/labelGoToLogin"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dip"
        android:text="@string/label_goToLogin"
        android:textSize="12sp"
        android:textStyle="bold"
        android:gravity="center" />

    <EditText
        android:id="@+id/registerUsername"
        android:inputType="textPersonName"
        android:layout_margin="5dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="@string/label_username"
        android:gravity="center" />

    <TableRow android:layout_width="fill_parent" android:layout_height="fill_parent">
        <EditText
            android:id="@+id/registerPin"
            android:inputType="numberPassword"
            android:layout_margin="5dip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="@string/label_password"
            android:gravity="center" />
        <EditText
            android:id="@+id/registerConfirmPin"
            android:inputType="numberPassword"
            android:layout_margin="5dip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="@string/label_confirm_password"
            android:gravity="center" />
    </TableRow>

    <TableRow android:layout_width="fill_parent" android:layout_height="fill_parent">
        <EditText
            android:id="@+id/registerFirstName"
            android:inputType="textPersonName"
            android:layout_margin="5dip"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:hint="@string/label_first_name"/>

        <EditText
            android:id="@+id/registerLastName"
            android:inputType="textPersonName"
            android:layout_margin="5dip"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:hint="@string/label_last_name"/>
    </TableRow>

    <EditText
        android:id="@+id/registerMsisdn"
        android:inputType="phone"
        android:layout_margin="5dip"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:hint="@string/label_msisdn"
        android:gravity="center" />

    <EditText
        android:id="@+id/registerEmail"
        android:inputType="textEmailAddress"
        android:layout_margin="5dip"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:hint="@string/label_email_address"
        android:gravity="center" />

    <TextView
        android:id="@+id/register_error"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColor="#e30000"
        android:layout_margin="5dip"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/btnRegister"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_margin="10dp"
        android:text="@string/label_register_button" style="@style/DefaultButtonText"
        android:background="@drawable/button_default_bg" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dip"
        android:padding="5dp"
        android:text="@string/blaklizt_website"
        android:autoLink="web"
        android:linksClickable="true"
        android:layout_gravity="center_horizontal|center_vertical"
        android:gravity="center_horizontal|center_vertical" />

</TableLayout>
