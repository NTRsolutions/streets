<resources>

    <style name="Theme.Streets" parent="Base.Theme.Streets"/>

    <style name="Base.Theme.Streets" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">#673AB7</item>
        <item name="colorPrimaryDark">#512DA8</item>
        <item name="colorAccent">#FF4081</item>
        <item name="android:windowBackground">@color/window_background</item>
    </style>

    <style name="Widget.CardContent" parent="android:Widget">
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">24dp</item>
        <item name="android:paddingBottom">24dp</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="LayoutParent">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
    </style>

    <style name="AuthHeaderLogo">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:padding">3dp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:background">@drawable/blaklizt_logo</item>
        <item name="android:contentDescription">@string/blaklizt_logo</item>
    </style>

    <style name="AuthHeaderText">
        <item name="android:textIsSelectable">true</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="AuthSwitchLoginRegister">
        <item name="android:textIsSelectable">true</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="AuthBack">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:gravity">left</item>
        <item name="android:contentDescription">@string/go_back</item>
        <item name="android:src">@drawable/res971</item>
    </style>

    <style name="AuthForward">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:gravity">right</item>
        <item name="android:contentDescription">@string/go_forward</item>
        <item name="android:src">@drawable/res972</item>
    </style>

    <style name="AuthEditText">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">43dp</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:padding">3dp</item>
        <item name="android:gravity">center_horizontal|center_vertical</item>
    </style>

    <style name="AuthButton">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_marginStart">50dp</item>
        <item name="android:layout_marginEnd">50dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:padding">3dp</item>
        <item name="android:background">@drawable/button_default_bg</item>
        <item name="android:gravity">center_horizontal|center_vertical</item>
        <item name="android:layout_gravity">center_horizontal|center_vertical</item>
        <item name="android:textColor">#232323</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">15sp</item>
        <item name="android:shadowColor">#f9f9f9</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">1</item>
    </style>

    <style name="AuthRegisterError">
        <item name="android:textIsSelectable">true</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">3dp</item>
        <item name="android:textColor">#e30000</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="AuthWebsite">
        <item name="android:textIsSelectable">true</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:padding">3dp</item>
        <item name="android:text">@string/blaklizt_website</item>
        <item name="android:autoLink">web</item>
        <item name="android:linksClickable">true</item>
        <item name="android:gravity">center_horizontal|center_vertical</item>
        <item name="android:layout_gravity">center_horizontal|center_vertical</item>
    </style>

    <style name="ServiceRadioButton">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="ServiceRadioButtonHint">
        <item name="android:textIsSelectable">true</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#E1E100</item>
        <item name="android:layout_marginStart">35dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:gravity">left</item>
    </style>
</resources>
